    <LinearLayout
        android:id="@+id/lnrContactUs"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/drawer10"
            android:src="@drawable/ic_contact"
            android:layout_marginLeft="10dp"
            android:contentDescription="Home!"
            android:layout_marginTop="0dp" />
        <com.circle8.circleOne.Utils.orkebyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:id="@+id/textDrawer10"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrHelp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/drawer11"
            android:src="@drawable/ic_help"
            android:layout_marginLeft="10dp"
            android:contentDescription="Home!"
            android:layout_marginTop="0dp" />
        <com.circle8.circleOne.Utils.orkebyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:id="@+id/textDrawer11"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/white" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrLogout"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/drawer12"
                android:src="@drawable/ic_logout"
                android:layout_marginLeft="10dp"
                android:contentDescription="Home!"
                android:layout_marginTop="0dp" />

            <com.circle8.circleOne.Utils.orkebyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:id="@+id/textDrawer12"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
