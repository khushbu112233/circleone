<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:background="@color/colorPrimary"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:tint="@color/white"
                android:src="@drawable/login_logo"
                android:layout_width="30dp"
                android:layout_height="25dp" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrMyAcc"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/drawer1"
            android:src="@drawable/ic_acc"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp" />

        <com.circle8.circleOne.Utils.orkebyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Account"
            android:id="@+id/textDrawer1"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/white" />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrAddQR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/drawerQR"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:contentDescription="Home!"
                android:src="@drawable/ic_qrscann" />

            <com.circle8.circleOne.Utils.orkebyTextView
                android:id="@+id/textDrawerQR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Scan QR code"
                android:textColor="@android:color/white"
                android:textSize="15dp" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrManageProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/drawer2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:contentDescription="Home!"
            android:src="@drawable/ic_manage_cards" />

        <com.circle8.circleOne.Utils.orkebyTextView
            android:id="@+id/textDrawer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Manage My Profile"
            android:textColor="@android:color/white"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrRequestNewCard"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/drawer3"
            android:src="@drawable/ic_new_card"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp" />
        <com.circle8.circleOne.Utils.orkebyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Card Request         "
            android:id="@+id/textDrawer3"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/white" />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrSyncContacts"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_new_card"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp" />
            <com.circle8.circleOne.Utils.orkebyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sync Contacts         "
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lnrRewardsPoints"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_paid_event"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp" />
            <com.circle8.circleOne.Utils.orkebyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reward Points         "
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/drawer4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:contentDescription="Home!"
                android:src="@drawable/ic_noti" />

            <com.circle8.circleOne.Utils.orkebyTextView
                android:id="@+id/textDrawer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Notifications"
                android:textColor="@android:color/white"
                android:textSize="15dp" />

            <com.circle8.circleOne.Utils.CircularTextView
                android:layout_marginLeft="8dp"
                android:id="@+id/txtNotificationCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:padding="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrGroup"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/drawer5"
            android:src="@drawable/ic_group"
            android:layout_marginLeft="10dp"
            android:contentDescription="Home!"
            android:layout_marginTop="0dp" />

        <com.circle8.circleOne.Utils.orkebyTextView
            android:id="@+id/textDrawer5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Circles"
            android:textColor="@android:color/white"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrSubscription"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/drawer6"
            android:src="@drawable/ic_subscribe"
            android:layout_marginLeft="10dp"
            android:contentDescription="Home!"
            android:layout_marginTop="0dp" />
        <com.circle8.circleOne.Utils.orkebyTextView
            android:id="@+id/textDrawer6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Subscription"
            android:textColor="@android:color/white"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrHistory"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/drawer7"
            android:src="@drawable/ic_history"
            android:layout_marginLeft="10dp"
            android:contentDescription="Home!"
            android:layout_marginTop="0dp" />

        <com.circle8.circleOne.Utils.orkebyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:id="@+id/textDrawer7"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/drawer8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:contentDescription="Home!"
            android:src="@drawable/ic_lang" />

        <com.circle8.circleOne.Utils.orkebyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language"
            android:id="@+id/textDrawer8"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/white" />

    </LinearLayout>

   <!-- <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/drawer9"
            android:src="@drawable/ic_security"
            android:layout_marginLeft="10dp"
            android:contentDescription="Home!"
            android:layout_marginTop="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security"
            android:id="@+id/textDrawer9"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/white" />

    </LinearLayout>
