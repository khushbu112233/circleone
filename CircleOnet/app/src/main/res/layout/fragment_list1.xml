<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:nestedScrollingEnabled="false"
    tools:context="com.circle8.circleOne.Fragments.List1Fragment">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/lnrSearch"
        android:layout_below="@+id/appbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.circle8.circleOne.Utils.MyRiadProAutoComplete
            android:layout_centerVertical="true"
            android:background="@drawable/txt_back"
            android:paddingRight="10dp"
            android:layout_toLeftOf="@+id/imgSearch"
            android:paddingLeft="10dp"
            android:hint="search in contacts"
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="12dp"
            android:focusableInTouchMode="true"
            android:imeOptions="actionSearch"
            android:inputType="textAutoComplete|textAutoCorrect"
            android:textColor="#626567"
            android:textColorHint="#626567"/>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/colorAccent"
            android:background="@drawable/search"
            android:id="@+id/imgSearch"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>

    <View
        android:layout_marginTop="3dp"
        android:id="@+id/view"
        android:layout_below="@+id/lnrSearch"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tvFriendInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/view"
        android:layout_marginTop="20dp"
        android:text="@string/no_connection"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/unselected"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_below="@+id/view"
        android:fillViewport="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:nestedScrollingEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="2"
            android:id="@+id/lnrList"
            android:splitMotionEvents="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">
                <android.support.v7.widget.RecyclerView
                    android:layout_centerInParent="true"
                    android:id="@+id/list_horizontal1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0.1"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:id="@+id/rlLoadMore1"
                    android:padding="3dp"
                    android:visibility="gone"
                    android:layout_weight="0.9">
                    <ProgressBar
                        android:id="@+id/more_progress1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">
                <android.support.v7.widget.RecyclerView
                    android:layout_centerInParent="true"
                    android:layout_height="match_parent"
                    android:id="@+id/list_horizontal2"
                    android:layout_width="match_parent"
                    android:layout_weight="0.1"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:id="@+id/rlLoadMore2"
                    android:padding="3dp"
                    android:visibility="gone"
                    android:layout_weight="0.9">
                    <ProgressBar
                        android:id="@+id/more_progress2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:weightSum="1"
        android:orientation="vertical"
        android:clickable="false"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_weight="0.5"
            android:id="@+id/frame"
            android:clickable="false"
            android:layout_below="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></FrameLayout>
        <FrameLayout
            android:layout_weight="0.5"
            android:clickable="false"
            android:layout_below="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frame1"></FrameLayout>
    </LinearLayout>

    <TextView
        android:textAlignment="center"
        android:visibility="visible"
        android:id="@+id/txtNoCard1"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_friend_connection"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvFriendInfo"
        android:layout_toEndOf="@+id/tvFriendInfo">

    <RelativeLayout
        android:id="@+id/rlProgressDialog"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:elevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:weightSum="1">

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"
                android:gravity="right"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/imgConnecting1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/round1" />
                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/imgConnecting2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/round2" />
                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/imgConnecting3"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/round3" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtProgressing"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:textSize="15dp"
                android:layout_below="@+id/imgConnecting"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connecting."
                android:layout_gravity="center_vertical"
                android:layout_weight="0.4"/>
             </LinearLayout>
         </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
