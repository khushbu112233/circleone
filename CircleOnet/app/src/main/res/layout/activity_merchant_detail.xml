<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.circle8.circleOne.Activity.MerchantDetailActivity">

    <RelativeLayout
        android:elevation="15dp"
        android:id="@+id/rlTabBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorAccent" >
        <ImageView
            android:id="@+id/imgBack"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <com.circle8.circleOne.Utils.cgTextView
            android:id="@+id/txtTitle"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merchant Details"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/imgProfileMenu"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="22dp"
            android:layout_height="30dp"
            android:visibility="visible"
            android:src="@drawable/ic_dehaze_black_24dp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/rlTabBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp">
                <com.circle8.circleOne.Utils.cgBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Starbucks Singapore"
                    android:textColor="@color/gray_text"
                    android:layout_centerVertical="true"
                    android:textSize="17dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="0.5"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/white"
                    android:src="@drawable/usr"
                    android:id="@+id/imgProfile"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"/>
            </LinearLayout>

            <com.circle8.circleOne.Utils.cgTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Singapore is the third international country outside North America to introduce Starbucks to its discoming customers who readly embrace the starbucks experience.\n\nStarbucks coffee singapore is a wholy owned subsidary of Starbucks Coffee Corporation since June 2004.\nThe first starbucks store opened on December 1996 of Uat Town, strategically located along the nation's reowned Orchard Food shopping belt."
                android:textColor="@color/gray_text"
                android:textSize="12dp"
                android:textAlignment="gravity"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"/>

            <com.circle8.circleOne.Utils.cgTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More info"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:textAlignment="gravity"
                android:layout_gravity="right"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>





        </LinearLayout>

    </ScrollView>

</RelativeLayout>
