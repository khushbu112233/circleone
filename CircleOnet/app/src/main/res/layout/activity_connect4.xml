<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amplearch.circleonet.Activity.Connect4Activity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connect"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_dehaze_black_24dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Congratulations!"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_above="@+id/ivImage1"
                android:layout_marginBottom="45dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You have a 7th level connection."
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_above="@+id/ivImage1"
                android:layout_marginBottom="20dp"/>

            <ImageView
                android:id="@+id/ivImage1"
                android:layout_width="250dp"
                android:layout_height="240dp"
                android:src="@drawable/ic_connected1"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/txtAsk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ask for link detail"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_below="@+id/ivImage1"
                android:layout_marginTop="30dp"/>


            <LinearLayout
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:id="@+id/lnrBottomTab"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_above="@+id/lnrBottomTab"
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgCards"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:padding="14dp"
                        android:src="@drawable/ic_icon1" />

                    <ImageView
                        android:id="@+id/imgConnect"
                        android:padding="14dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_icon2"/>
                    <ImageView
                        android:id="@+id/imgEvents"
                        android:padding="14dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_icon3"/>
                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_marginRight="20dp"
                        android:padding="14dp"
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_icon4"/>
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>




    </FrameLayout>


</RelativeLayout>
