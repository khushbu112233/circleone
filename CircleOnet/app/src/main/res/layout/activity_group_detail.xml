<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amplearch.circleonet.Activity.GroupDetailActivity">

    <LinearLayout
        android:id="@+id/llProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_collapseMode="parallax"
        app:layout_scrollFlags="snap">

        <FrameLayout
            android:alpha="1"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:background="@color/colorAccent">

            <ImageView
                android:id="@+id/imgCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/democard" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="1"
                android:background="#83ced4"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/txtprofile"
                    android:textSize="18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Groups"
                    android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/imgProfileMenu"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="22dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_dehaze_black_24dp"/>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="80dp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/colorPrimary"
                            android:src="@drawable/usr"
                            android:id="@+id/imgProfile"
                            android:layout_width="70dp"
                            android:layout_height="70dp" />
                        <ImageView
                            android:id="@+id/imgCamera"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/mini_camera_blue"
                            android:layout_alignParentRight="false"
                            android:layout_marginTop="50dp"
                            android:layout_marginLeft="50dp"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvGroupName"
                        android:textSize="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="Master Developers"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tvGroupPartner"
                        android:textSize="16dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="Partner for decoration"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivProfileShare"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_profile_white"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"/>

                <ImageView
                    android:id="@+id/ivEdit"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_edit_white"/>

            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llProfile"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp">

    </ListView>



</RelativeLayout>
