                  card_view:cardUseCompatPadding="true"
                  android:layout_width="match_parent"
                  android:layout_height="190dp"
                  android:elevation="4dp"
                  android:background="@drawable/background_shadow"
                  android:layout_marginRight="0dp">
              <ImageView
