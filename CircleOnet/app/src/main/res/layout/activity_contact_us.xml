<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amplearch.circleonet.Activity.ContactUsActivity">

    <android.support.v4.view.ViewPager
        android:clickable="true"
        app:layout_scrollFlags="scroll|snap"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="245dp" />

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <android.support.design.widget.AppBarLayout
            android:background="@android:color/transparent"
            android:id="@+id/appbar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/NoActionbar"
            app:expanded="false">

            <android.support.v4.view.ViewPager
                android:alpha="0.0"
                android:clickable="true"
                app:layout_scrollFlags="scroll|snap"
                android:id="@+id/viewPager1"
                android:layout_width="match_parent"
                android:layout_height="245dp" />

        </android.support.design.widget.AppBarLayout>

        <com.amplearch.circleonet.Utils.StickyScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/frame_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    app:layout_scrollFlags="snap">

                    <FrameLayout
                        android:alpha="1"
                        android:layout_width="match_parent"
                        android:layout_height="245dp"
                        android:background="@color/colorAccent">

                        <ImageView
                            android:id="@+id/imgCard"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/democard" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="1"
                            android:background="#83ced4"
                            android:scaleType="fitXY" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imgBack"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />

                            <TextView
                                android:id="@+id/txtprofile"
                                android:textSize="18dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contact Us"
                                android:textColor="@color/white"/>

                            <ImageView
                                android:id="@+id/imgProfileMenu"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="22dp"
                                android:layout_height="30dp" />

                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true">

                                <RelativeLayout
                                    android:layout_width="90dp"
                                    android:layout_height="80dp">

                                    <ImageView
                                        android:src="@drawable/circle8_symbol"
                                        android:id="@+id/circle8"
                                        android:layout_width="90dp"
                                        android:layout_height="90dp" />

                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/tvCompanyName"
                                    android:textSize="18dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textAlignment="center"
                                    android:text="CIRCLE8 PTE. LTD."
                                    android:textStyle="bold"
                                    android:textColor="@color/white"/>

                                <TextView
                                    android:id="@+id/tvPartner"
                                    android:textSize="16dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textAlignment="center"
                                    android:text="Partner for decoration"
                                    android:textColor="@color/white"/>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/ivMessage"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="15dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_mail_white"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentBottom="true"/>

                            <ImageView
                                android:id="@+id/ivPhone"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="10dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_phone_white"/>

                        </RelativeLayout>
                    </FrameLayout>
                </LinearLayout>

                <!--Below card layout-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:id="@+id/tabs1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/fbUrl"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1"
                            android:padding="6dp"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@drawable/icon_fb"/>
                        <ImageView
                            android:id="@+id/linkedInUrl"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@drawable/icon_linkedin_gray"/>
                        <ImageView
                            android:id="@+id/twitterUrl"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@drawable/icon_twitter"/>
                        <ImageView
                            android:id="@+id/googleUrl"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@drawable/icon_google_gray"/>
                        <ImageView
                            android:id="@+id/youtubeUrl"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@drawable/icon_utube_red"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="170dp"
                            android:src="@drawable/circle8"
                            android:layout_marginBottom="0dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="285dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/lnrAddress1"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginRight="20dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_location_blue"/>
                            <TextView
                                android:id="@+id/tvAddress1"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:text="65 Ubi Road 1 #03--90 Oxley Biz Hub 1,"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnrAddress2"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginRight="20dp"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />
                            <TextView
                                android:id="@+id/tvAddress2"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:text="Singapore 408729"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnrWebsite"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginRight="20dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_web_blue"/>
                            <TextView
                                android:id="@+id/tvWebsite"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:text="www.circle8.asia"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llMailBox"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginRight="20dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_mail_blue"/>
                            <TextView
                                android:id="@+id/tvMail"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:text="general@circle8.asia"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnrPhone"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginRight="20dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_phone_blue"/>
                            <TextView
                                android:id="@+id/tvPhone"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:text="+ 65 6816 7888"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnrWork"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginRight="20dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_phone_blue"/>
                            <TextView
                                android:id="@+id/tvWork"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:text="+65 6816 7888"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </LinearLayout>

                    </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>




            </LinearLayout>

        </com.amplearch.circleonet.Utils.StickyScrollView>

    </android.support.design.widget.CoordinatorLayout>


</RelativeLayout>
