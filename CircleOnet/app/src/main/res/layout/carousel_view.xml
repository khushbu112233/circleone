<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="false">

        <com.dd.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:sl_cornerRadius="6dp"
            app:sl_dx="0dp"
            app:sl_dy="0dp"
            app:sl_shadowColor="#AA000000"
            app:sl_shadowRadius="4dp">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/card1" />
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rltDefaultCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/default_card">

                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="CHRIS LIAO"/>

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="CEO"/>

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="www.circlesone.com  chris.liao@circle8.asia"/>

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="65 Ubi Road | #03-90 Oxley Bizhub"/>

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="+65 6816 7888   +65 9821 9235"/>


                </LinearLayout>
            </RelativeLayout>
        </com.dd.ShadowLayout>
    </android.support.v7.widget.CardView>

