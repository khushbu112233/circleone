<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="5dp"
    android:padding="0dp"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="@android:color/white">

    <com.daimajia.swipe.SwipeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:tag="Bottom2"
            android:background="#333"
            android:layout_width="40dp"
            android:gravity="center"
            android:layout_height="120dp">
            <ImageView
                android:id="@+id/trash"
                android:src="@drawable/trash"
                android:layout_width="22dp"
                android:layout_height="22dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/image"
                android:layout_width="190dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:padding="0dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rltDefaultCard"
                android:layout_width="190dp"
                android:layout_height="120dp"
                android:background="@drawable/default_card">

                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvPersonName"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="2dp"
                        android:textSize="8dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="CHRIS LIAO"/>

                    <TextView
                        android:id="@+id/tvPersonProfile"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="8dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="CEO"/>

                    <TextView
                        android:id="@+id/tvPersonWebsite"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="2dp"
                        android:textSize="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="www.circlesone.com  chris.liao@circle8.asia"/>

                    <TextView
                        android:id="@+id/tvPersonAddress"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="2dp"
                        android:textSize="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="65 Ubi Road | #03-90 Oxley Bizhub"/>

                    <TextView
                        android:id="@+id/tvPersonContact"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="+65 6816 7888   +65 9821 9235"/>

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </RelativeLayout>

    </com.daimajia.swipe.SwipeLayout>

</android.support.v7.widget.CardView>