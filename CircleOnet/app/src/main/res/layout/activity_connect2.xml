<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".Activity.ConnectActivity">

    <FrameLayout
        android:id="@+id/flProfile"
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#38c0c7"
            android:alpha="0.9"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_dehaze_black_24dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/profile1"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/tvPersonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eduardo Saverin"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/ivProfileImage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/tvCompanyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The co-founder of FB"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:layout_below="@+id/tvPersonName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="0dp"/>
            </RelativeLayout>
        </RelativeLayout>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flProfile">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/llCommunicate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="0dp">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:padding="3dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_call_gray"
                    android:layout_marginRight="70dp"/>
                <ImageView
                    android:padding="3dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_sms_gray"
                    android:layout_marginRight="60dp"/>
                <ImageView
                    android:padding="3dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_mail_gray1"
                    android:layout_marginRight="60dp"/>
                <ImageView
                    android:layout_marginRight="20dp"
                    android:padding="3dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_profile_gray"/>
            </LinearLayout>

            <TextView
                android:id="@+id/breakLine"
                android:layout_below="@+id/llCommunicate"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#38c0c7"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/llSocial"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_below="@+id/breakLine"
                android:gravity="center"
                android:layout_marginTop="0dp">
                <ImageView
                    android:padding="2dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_fb_gray"
                    android:layout_marginRight="40dp"/>
                <ImageView
                    android:padding="2dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_linkedin_gray"
                    android:layout_marginRight="60dp"/>
                <ImageView
                    android:padding="2dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_google_gray"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="40dp"/>
                <ImageView
                    android:padding="2dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_utube_gray"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/fab"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="0dp"
                android:src="@drawable/ic_connect"
                android:background="@android:color/white"
                android:layout_below="@+id/breakLine"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/breakLine1"
                android:layout_below="@+id/llSocial"
                android:layout_width="155dp"
                android:layout_height="1dp"
                android:background="#38c0c7"
                android:layout_marginTop="0dp" />

            <TextView
                android:id="@+id/breakLine5"
                android:layout_below="@+id/llSocial"
                android:layout_width="155dp"
                android:layout_height="1dp"
                android:background="#38c0c7"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/breakLine1"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp">

<!--
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_18_1"
                    />
-->
              <!--  <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group Tag"
                    android:textSize="15dp"
                    android:textColor="#38c0c7"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/play"/>
-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/breakLine1"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <RelativeLayout
                    android:gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:text="Contact Info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginRight="5dp"
                        android:id="@+id/img2"
                        android:src="@drawable/ic_tag1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@+id/txt1"
                        android:layout_toLeftOf="@+id/txt1"
                        android:layout_toStartOf="@+id/txt1" />

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/img1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:text="Group Tag 1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_edit"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_web"/>

                    <TextView
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="#6b6c6e"
                        android:textSize="13sp"
                        android:text="www.tcmong.com.sg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_mail_gray"/>

                    <TextView
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="#6b6c6e"
                        android:textSize="13sp"
                        android:text="tcmong@tcmong.com.sg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_phone"/>

                    <TextView
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="#6b6c6e"
                        android:textSize="13sp"
                        android:text="+65 6842 6186      +65 6842 6288"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_phone2"/>

                    <TextView
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="#6b6c6e"
                        android:textSize="13sp"
                        android:text="+65 6842 6288"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_mob"/>

                    <TextView
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="#6b6c6e"
                        android:textSize="13sp"
                        android:text="+65 8842 6688"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location"/>

                    <TextView
                        android:textColor="#6b6c6e"
                        android:textSize="13sp"
                        android:text="246 Macpherson Road.Betime Building #03-04.Singapore 348578"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:id="@+id/lnrBottomTab"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_above="@+id/lnrBottomTab"
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCards"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/ic_icon1" />

            <ImageView
                android:id="@+id/imgConnect"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/ic_icon2" />

            <ImageView
                android:id="@+id/imgEvents"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/ic_icon3" />

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:padding="13dp"
                android:src="@drawable/ic_icon4" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
