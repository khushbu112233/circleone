<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.circle8.circleOne.Activity.MyAccountActivity">

    <RelativeLayout
        android:id="@+id/rlProgressDialog"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:elevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:weightSum="1">

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:gravity="right"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/imgConnecting1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/round1" />
                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/imgConnecting2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/round2" />
                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/imgConnecting3"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/round3" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtProgressing"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:textSize="15dp"
                android:layout_below="@+id/imgConnecting"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connecting."
                android:layout_gravity="center_vertical"
                android:layout_weight="0.3"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

    <LinearLayout
        android:id="@+id/llProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_collapseMode="parallax"
        app:layout_scrollFlags="snap">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/colorPrimary">
            <ImageView
                android:id="@+id/imgCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/democard"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="1"
                android:background="#83ced4"
                android:scaleType="fitXY"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <com.circle8.circleOne.Utils.cgTextView
                    android:id="@+id/tvMyAccount"
                    android:textSize="17dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Account"
                    android:textColor="@color/white"/>
.
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imgProfileMenu"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="22dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_dehaze_black_24dp"/>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="35dp">
                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/white"
                            android:src="@drawable/usr"
                            android:id="@+id/imgProfile"
                            android:layout_width="70dp"
                            android:layout_height="70dp" />
                        <ImageView
                            android:id="@+id/ivMiniCamera"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/mini_camera_blue"
                            android:layout_alignParentRight="false"
                            android:layout_marginTop="50dp"
                            android:layout_marginLeft="50dp"/>
                    </RelativeLayout>
                    <com.circle8.circleOne.Utils.HelveticaLightTextView
                        android:id="@+id/tvPhotoUpload"
                        android:textSize="13dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="Photo Upload"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/rlMyAccount"
            android:layout_below="@+id/llProfile">
            <com.circle8.circleOne.Utils.cgTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Account Info"
                android:textColor="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:textSize="17dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/ivEditImg"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:src="@drawable/pencil_edit_blue"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scView"
            android:layout_below="@+id/rlMyAccount"
            android:layout_above="@+id/llBottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="0dp" />
                <com.circle8.circleOne.Utils.HelveticaLightEditText
                    android:textStyle="bold"
                    android:id="@+id/etUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:hint="Email(Username)"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    android:enabled="false"/>
            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/tvUsernameInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please! Enter Email(Username)"
                android:textSize="10sp"
                android:textColor="@color/unselected"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginRight="0dp" />
                    <com.circle8.circleOne.Utils.HelveticaLightEditText
                        android:id="@+id/etFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:hint="First Name"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:enabled="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginRight="0dp" />
                    <com.circle8.circleOne.Utils.HelveticaLightEditText
                        android:id="@+id/etLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:hint="Last Name"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:enabled="false"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp">
                <com.circle8.circleOne.Utils.HelveticaLightTextView
                    android:visibility="gone"
                    android:id="@+id/tvFirstNameInfo"
                    android:layout_weight="1"
                    android:textColor="@color/unselected"
                    android:textSize="10sp"
                    android:text="Enter First Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"/>
                <com.circle8.circleOne.Utils.HelveticaLightTextView
                    android:visibility="gone"
                    android:id="@+id/tvLastNameInfo"
                    android:layout_weight="1"
                    android:textColor="@color/unselected"
                    android:textSize="10sp"
                    android:text="Enter Last Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="0dp" />
                <com.circle8.circleOne.Utils.HelveticaLightEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:hint="Password"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    android:inputType="textPassword"
                    android:enabled="false"/>
            </LinearLayout>
            <com.circle8.circleOne.Utils.HelveticaLightTextView
                android:visibility="gone"
                android:id="@+id/tvPasswordInfo"
                android:textColor="@color/unselected"
                android:textSize="10sp"
                android:text="Enter Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="0dp" />
                <com.circle8.circleOne.Utils.HelveticaLightEditText
                    android:id="@+id/etPasswordAgain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:hint="Password Again"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    android:inputType="textPassword"
                    android:enabled="false"/>
            </LinearLayout>
            <com.circle8.circleOne.Utils.HelveticaLightTextView
                android:visibility="gone"
                android:id="@+id/tvAgainPasswordInfo"
                android:textColor="@color/unselected"
                android:textSize="10sp"
                android:text="Enter Re-Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.hbb20.CountryCodePicker
                    app:ccp_defaultPhoneCode="65"
                    android:visibility="visible"
                    app:ccpDialog_searchEditTextTint="@color/colorPrimary"
                    app:ccp_textSize="15dp"
                    app:ccpDialog_textColor="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"
                    app:ccp_showNameCode="false"
                    app:ccp_showPhoneCode="true"
                    app:ccp_showFlag="false"
                    android:layout_marginRight="10dp"
                    android:id="@+id/ccp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="0dp" />
                <com.circle8.circleOne.Utils.HelveticaLightEditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:hint="Phone"
                    android:inputType="number"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    android:enabled="false"/>
            </LinearLayout>

            <com.circle8.circleOne.Utils.HelveticaLightEditText
                android:id="@+id/etDOB"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:hint="DOB ( dd/mm/yyyy) "
                android:backgroundTint="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:inputType="textPassword"
                android:enabled="false"/>
            <com.circle8.circleOne.Utils.HelveticaLightTextView
                android:visibility="gone"
                android:id="@+id/tvPhoneInfo"
                android:textColor="@color/unselected"
                android:textSize="10sp"
                android:text="Enter Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="0dp" />
                <com.circle8.circleOne.Utils.HelveticaLightEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:hint="Email"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp" />
            </LinearLayout>
            <com.circle8.circleOne.Utils.HelveticaLightTextView
                android:visibility="gone"
                android:id="@+id/tvEmailInfo"
                android:textColor="@color/unselected"
                android:textSize="10sp"
                android:text="Enter Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="0dp" />
                <com.circle8.circleOne.Utils.HelveticaLightEditText
                    android:id="@+id/etDob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:hint="DOB(DD/MM/YY)"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="0dp" />
                <EditText
                    android:id="@+id/etAddress1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:hint="Address"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   "
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="0dp" />
                <EditText
                    android:id="@+id/etAddress2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:hint=""
                    android:backgroundTint="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp" />
            </LinearLayout>

            <com.circle8.circleOne.Utils.HelveticaLightTextView
                android:id="@+id/txtGender"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender: Male / Female"
                android:textColor="@color/colorPrimary"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:layout_marginBottom="15dp">

                <View
                    android:id="@+id/viewCenter"
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:background="@color/unselected"
                    android:layerType="software" />

                <View
                    android:id="@+id/vwDrag1"
                    android:layout_width="15dp"
                    android:layout_height="2dp"
                    android:layout_centerVertical="true"
                    android:background="@color/unselected"
                    android:layerType="software"
                    android:layout_toLeftOf="@+id/iv_ConnectImg"/>

                <ImageView
                    android:id="@+id/iv_ConnectImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_connect"
                    android:layout_centerInParent="true"/>

                <View
                    android:id="@+id/vwDrag2"
                    android:layout_width="15dp"
                    android:layout_height="2dp"
                    android:layout_centerVertical="true"
                    android:background="@color/unselected"
                    android:layerType="software"
                    android:layout_toRightOf="@+id/iv_ConnectImg"/>

                <RelativeLayout
                    android:id="@+id/ivFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/vwDrag2">
                    <ImageView
                        android:id="@+id/ivFemaleround"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_girl_gray"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ivMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/vwDrag1">
                    <ImageView
                        android:id="@+id/ivMaleRound"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_man_gray"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </RelativeLayout>

