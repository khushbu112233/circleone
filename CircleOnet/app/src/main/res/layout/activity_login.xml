<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    tools:context="com.amplearch.circleonet.Activity.LoginActivity">

    <ImageView
        android:layout_weight="1"
        android:layout_gravity="center"
        android:id="@+id/imgLogin"
        android:src="@drawable/loginlogo"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="190dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:weightSum="3"
        android:id="@+id/lnrLogin"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/imgLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/edit_back"
            android:hint="Username"
            android:textColorHint="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textColor="@color/white"
            android:drawableRight="@drawable/question"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/edit_back"
            android:hint="Password"
            android:textColorHint="@color/white"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/btnLogin"
            android:textSize="16dp"
            android:textAllCaps="false"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Login"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_finger_print"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <View
                android:id="@+id/viewLogin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="@color/colorAccent" />

        </RelativeLayout>

    <Button
        android:id="@+id/btnRegister"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lnrBottom"
        android:layout_below="@+id/viewLogin"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/lnrBottom"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fbLogin"
            android:layout_marginRight="25dp"
            android:src="@drawable/icon_fb"
            android:layout_width="28dp"
            android:layout_height="28dp" />

            <com.facebook.login.widget.LoginButton
                android:visibility="gone"
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp" />

        <ImageView
            android:layout_marginRight="25dp"
            android:src="@drawable/icon_linkedin"
            android:layout_width="28dp"
            android:layout_height="28dp" />

        <ImageView
            android:id="@+id/btnLoginTwitter"
            android:layout_marginRight="25dp"
            android:src="@drawable/icon_twitter"
            android:layout_width="28dp"
            android:layout_height="28dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.gms.common.SignInButton
                    android:layout_centerInParent="true"
                    android:background="@drawable/icon_google"
                    android:id="@+id/btn_sign_in"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
        <ImageView
            android:src="@drawable/icon_google"
            android:layout_width="28dp"
            android:layout_height="28dp" />
            </RelativeLayout>
    </LinearLayout>

       <!-- <com.twitter.sdk.android.core.identity.TwitterLoginButton
            android:id="@+id/twitter_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->
    </LinearLayout>
    </RelativeLayout>
